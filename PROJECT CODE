
import pyttsx3
import speech_recognition
import webbrowser
import datetime
import pyjokes
import pyaudio

def speak():
    recognizer=speech_recognition.Recognizer()
    with speech_recognition.Microphone() as source:
        print("hey!,how can i help you...?")
        recognizer.adjust_for_ambient_noise(source)
        audio=recognizer.listen(source)
        try:
            print("recognizing......")
            data=recognizer.recognize_google(audio)
            print(data)
            return data
        except speech_recognition.UnknownValueError:
            print("sorry!could not catch the audio")


def speech_to_text(x):
    engine=pyttsx3.init()           
    voices=engine.getProperty('voices')
    engine.setProperty('voice',voices[1].id)
    rate=engine.getProperty('rate')
    engine.setProperty('rate',150)
    engine.say(x)
    engine.runAndWait()

if __name__ == "__main__":

   #if  "hey Scuba" in speak().lower() :
     while True:
      data1=speak()
      if "your name" in data1:
          name="My name is Scuba"
          speech_to_text(name)
      elif "how old" in data1:
         age="I am 3 years old"
         speech_to_text(age)
      elif "time" in data1:
          time=datetime.datetime.now().strftime("%I%M%p")
          speech_to_text(time)
      elif "youtube" in data1:
          webbrowser.open("https://www.youtube.com/")

      elif "joke" in data1:
          tell_joke=pyjokes.get_joke(language="en",category="science")
          print(tell_joke)
          speech_to_text(tell_joke)

      elif "exit" in data1:
         speech_to_text("thank you for your time")
         break
 
    
      #  pass
else:
        print("thank you")




